@page "/testpage"
@using Kysect.GithubActivityAnalyzer.WebDemo.Shared
@using Kysect.GithubActivityAnalyzer
@using Kysect.GithubActivityAnalyzer.Models.ApiResponses
@using System.Net.Http
@using System.Text.Json
@using System.Threading
@using System.Net
@inject HttpClient Http
<h1>TestFunc</h1>

<p>
    <input @bind="SetName" @bind:event="oninput" />
</p>
<button class="btn btn-primary" @onclick="CreateClient">Click me</button>
@if(SetName == null)
{
    <p><em>Please write name</em></p>
}
else
{
    <p>Name: @SetName </p>
}
@if (Contributions == 0)
{
    <p>Please wait...</p>
}
else
{
    <p>Contributions: @Contributions</p>
}

@code {
    private string SetName { get; set; } = String.Empty;
    private ActivityInfo Info { get; set; }
    private int Contributions { get; set; } = 0;
    private string SomeResponse { get; set; }


    protected async Task CreateClient()
    {
        var response = await Http.GetStringAsync($"GitHubApi?username={SetName}");
        Thread.Sleep(600);
        SomeResponse = response;
        Info = JsonSerializer.Deserialize<ActivityInfo>(response);
        Contributions = Info.Total;
    }
}
