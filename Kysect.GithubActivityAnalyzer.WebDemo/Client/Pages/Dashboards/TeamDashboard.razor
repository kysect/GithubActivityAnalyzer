@page "/TeamDashboard"
@inject HttpClient Http
@inject IJSRuntime jsRuntime
<h1>Team Dashboard</h1>
<p>
    <input @bind="@_teamName" @bind:event="oninput" />
</p>

<p>
    <button class="btn btn-primary" @onclick="GenerateBarChart">GenerateBarChart</button>
</p>
@if (_teamName is null && !_statsIsVisible)
{
    <p><em>Please write team name</em></p>
}
else
{
    <p>Team name: @_teamName </p>
}
@if (_statsIsVisible)
{
    <div id="chartdiv"></div>
}


<!-- Styles -->
<style>
    #chartdiv {
        width: 100%;
        height: 500px;
        font-size: 11px;
    }
</style>